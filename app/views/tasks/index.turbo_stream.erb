<%= turbo_stream.append(:tasks) do %>
  <%= render partial: 'tasks/task', collection: @page.records, formats: :html %>
<% end %>

<%= turbo_stream.replace(:paginate_link) do %>
  <%= turbo_frame_tag "paginate_link" do %>
    <% if @page.last? %>
      No more pages!
    <% else %>
      <%= link_to "Next page", tasks_path(page: @page.next_param), { data: {'turbo-stream': true} } %>
    <% end %>
  <% end %>
<% end %>
